{
  "layout": {
    "type": "layout",
    "pages": [
      "page-settings",
      "page-geolocation"
    ],

    "page-settings": {
      "type": "page",
      "title": "Settings",
      "sections": [
        "section-general",
        "section-update"
      ]
    },

    "page-geolocation": {
      "type": "page",
      "title": "Geolocation",
      "sections": [
        "section-latlon"
      ]
    },

    "section-latlon": {
      "type": "section",
      "title": "Coordinates",
      "keys": [
        "enableGeolocation",
        "latitude",
        "longitude"
      ]
    },

    "section-general": {
      "type": "section",
      "title": "General Settings",
      "keys": [
        "useAltIcons",
        "showTooltip",
        "showNameTooltip",
        "showPercentageTooltip",
        "showPhaseLabel",
        "showNameLabel",
        "showPercentageLabel"
      ]
    },
    "section-update": {
      "type": "section",
      "title": "Update Settings",
      "keys": [
        "updateInterval"
      ]
    }
  },

  "showPhaseLabel": {
    "type": "checkbox",
    "default": false,
    "description": "Display the moon phase as a string"
  },
  "showNameLabel": {
    "type": "checkbox",
    "default": true,
    "description": "Display the name of the moon phase in the label",
    "dependency": "showPhaseLabel"
  },
  "showPercentageLabel": {
    "type": "checkbox",
    "default": false,
    "description": "Display the percentage of the moon phase in the label",
    "dependency": "showPhaseLabel"
  },
  "showTooltip": {
    "type": "checkbox",
    "default": true,
    "description": "Display a tooltip on hover"
  },
  "showNameTooltip": {
    "type": "checkbox",
    "default": true,
    "description": "Display the name of the moon phase in the tooltip",
    "dependency": "showTooltip"
  },
  "showPercentageTooltip": {
    "type": "checkbox",
    "default": false,
    "description": "Display percentage of the moon phase in the tooltip",
    "dependency": "showTooltip"
  },
  "useAltIcons": {
    "type": "checkbox",
    "default": true,
    "description": "Light theme"
  },
  "updateInterval": {
    "type": "spinbutton",
    "default": 1,
    "min": 1,
    "max": 86400,
    "step": 1,
    "units": "seconds",
    "description": "Update interval"
  },
  "enableGeolocation": {
    "type": "checkbox",
    "default": false,
    "description": "Turn on geolocation (Used to determine moon rise and set times)."
  },
  "latitude": {
    "type": "entry",
    "default": "",
    "description": "Latitude",
    "dependency": "enableGeolocation"
  },
  "longitude": {
    "type": "entry",
    "default": "",
    "description": "Longitude",
    "dependency": "enableGeolocation"
  }
}
