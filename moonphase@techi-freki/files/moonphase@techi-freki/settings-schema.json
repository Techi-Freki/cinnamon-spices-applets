{
  "layout": {
    "type": "layout",
    "pages": [
      "page-settings"
    ],

    "page-settings": {
      "type": "page",
      "title": "Settings",
      "sections": [
        "section-general",
        "section-geolocation",
        "section-update"
      ]
    },

    "section-geolocation": {
      "type": "section",
      "title": "Geolocation Settings",
      "keys": [
        "enableGeolocation",
        "geolocationLabel",
        "latitude",
        "longitude",
        "elevation",
        "showRiseSet"
      ]
    },

    "section-general": {
      "type": "section",
      "title": "General Settings",
      "keys": [
        "useAltIcons",
        "showTooltip",
        "showNameTooltip",
        "showPercentageTooltip",
        "showPhaseLabel",
        "showNameLabel",
        "showPercentageLabel"
      ]
    },
    "section-update": {
      "type": "section",
      "title": "Update Settings",
      "keys": [
        "updateInterval"
      ]
    }
  },

  "enableGeolocation": {
    "type": "checkbox",
    "default": false,
    "description": "Enable geolocation features"
  },

  "geolocationLabel": {
    "type": "label",
    "description": "(Defaults to New York, NY)",
    "dependency": "enableGeolocation"
  },
  "latitude": {
    "type": "entry",
    "default": "40.730610",
    "description": "Latitude",
    "dependency": "enableGeolocation"
  },
  "longitude": {
    "type": "entry",
    "default": "-73.935242",
    "description": "Longitude",
    "dependency": "enableGeolocation"
  },
  "elevation": {
    "type": "spinbutton",
    "default": 10,
    "min": 0,
    "max": 8848,
    "units": "meters",
    "step": 1,
    "description": "Elevation",
    "dependency": "enableGeolocation"
  },
  "showRiseSet": {
    "type": "checkbox",
    "default": false,
    "description": "Display the moon rise and set times on click",
    "dependency": "enableGeolocation"
  },
  "showPhaseLabel": {
    "type": "checkbox",
    "default": false,
    "description": "Display the moon phase as a string"
  },
  "showNameLabel": {
    "type": "checkbox",
    "default": true,
    "description": "Display the name of the moon phase in the label",
    "dependency": "showPhaseLabel"
  },
  "showPercentageLabel": {
    "type": "checkbox",
    "default": false,
    "description": "Display the percentage of the moon phase in the label",
    "dependency": "showPhaseLabel"
  },
  "showTooltip": {
    "type": "checkbox",
    "default": true,
    "description": "Display a tooltip on hover"
  },
  "showNameTooltip": {
    "type": "checkbox",
    "default": true,
    "description": "Display the name of the moon phase in the tooltip",
    "dependency": "showTooltip"
  },
  "showPercentageTooltip": {
    "type": "checkbox",
    "default": false,
    "description": "Display percentage of the moon phase in the tooltip",
    "dependency": "showTooltip"
  },
  "useAltIcons": {
    "type": "checkbox",
    "default": true,
    "description": "Light theme"
  },
  "updateInterval": {
    "type": "spinbutton",
    "default": 1,
    "min": 1,
    "max": 86400,
    "step": 1,
    "units": "seconds",
    "description": "Update interval"
  }
}
